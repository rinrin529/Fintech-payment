    <script>
        $("#firstButton").click(function(){
            var userinput = $("#inputText").val();
            var userinput2 = $("#inputText2").val();
            $.ajax({ //ajax 동기식 http 통신 기술 사용
                url: "/userData",
                type: "POST",
                data: {
                    userData1 : userinput,
                    userData2 : userinput2
                },
                success: function (data) {
                    console.log(data);
                    if(data==true){
                        alert("요청성공");
                    }
                },
            });

        })
    </script>


</html>